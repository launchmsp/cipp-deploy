        "principalId": "[reference(resourceId('Microsoft.Web/sites', parameters('funcAppName')), '2021-02-01', 'full').identity.principalId]",
        "principalType": "ServicePrincipal"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', parameters('funcAppName'))]"
      ]
    },
    {
      "type": "Microsoft.Web/staticSites/userProvidedFunctionApps",
      "apiVersion": "2020-12-01",
      "name": "[format('{0}/{1}', parameters('swaName'), parameters('funcAppName'))]",
      "properties": {
        "functionAppResourceId": "[resourceId('Microsoft.Web/sites', parameters('funcAppName'))]",
